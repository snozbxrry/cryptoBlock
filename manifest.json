{
	"manifest_version": 3,
	"name": "cryptoBlock for X (Twitter)",
	"version": "0.1.0",
	"description": "Hide tweets, profiles, and content related to crypto/coins on X, formerly known as Twitter.",
	"icons": {
		"16": "icons/cB.png",
		"32": "icons/cB.png",
		"48": "icons/cB.png",
		"128": "icons/cB.png"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://twitter.com/*",
		"https://x.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/*",
				"https://x.com/*"
			],
			"js": ["src/content.js"],
			"run_at": "document_start"
		}
	],
	"action": {
		"default_title": "cryptoBlock",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/cB.png",
			"32": "icons/cB.png",
			"48": "icons/cB.png"
		}
	},
	"options_page": "options/options.html",
	"web_accessible_resources": [
		{
			"resources": ["blocklist/blocklist.json"],
			"matches": ["<all_urls>"]
		}
	]
}
